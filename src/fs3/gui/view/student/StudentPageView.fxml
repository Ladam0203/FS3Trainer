<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" stylesheets="@../styles/common.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fs3.gui.controller.student.StudentPageController">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox minWidth="-Infinity" prefWidth="300.0" styleClass="right-border" HBox.hgrow="NEVER">
               <children>
                  <Pane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="56.0" style="-fx-background-color: #22577A;" VBox.vgrow="NEVER">
                     <children>
                        <ImageView fitWidth="80.0" layoutX="8.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/login_logo.png" />
                           </image>
                        </ImageView>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Pane>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #F7F8F9; -fx-background-color: #1e4c6b;" styleClass="fs3-headline" text="Assignments">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Label>
                  <ListView fx:id="ltvAssignedCitizens" onMouseClicked="#handleSelectCitizen" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
              <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE" tabMinHeight="40.0" tabMinWidth="200.0" HBox.hgrow="ALWAYS">
                  <tabs>
                      <Tab closable="false" text="General information">
                          <fx:include source="tabs/GeneralInformationView.fxml" />
                      </Tab>
                      <Tab closable="false" text="Health conditions">
                          <fx:include source="tabs/HealthConditionsView.fxml" />
                      </Tab>
                      <Tab closable="false" text="Functional ablities">
                          <fx:include source="tabs/FunctionalAbilitiesView.fxml" />
                      </Tab>
                  </tabs>
              </TabPane>
         </children>
      </HBox>
   </children>
</VBox>
