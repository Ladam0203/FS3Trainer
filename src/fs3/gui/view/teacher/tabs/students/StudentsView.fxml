<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minWidth="-Infinity" prefHeight="500.0" prefWidth="1200.0" stylesheets="@../../../styles/common.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fs3.gui.controller.teacher.tabs.students.StudentsController">
   <children>
      <Pane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="55.0" style="-fx-background-color: #22577A;" VBox.vgrow="NEVER">
         <children>
            <ImageView fitWidth="80.0" layoutX="8.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../resources/login_logo.png" />
               </image>
            </ImageView>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Pane>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <ListView fx:id="ltvStudents" styleClass="right-border" />
            <VBox styleClass="right-border" HBox.hgrow="SOMETIMES">
               <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #F7F8F9; -fx-background-color: #1e4c6b;" styleClass="fs3-headline" text="Available assignments" VBox.vgrow="NEVER" />
                  <ListView fx:id="ltvAvailableAssignements" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox alignment="CENTER" maxWidth="120.0" minWidth="-Infinity" spacing="12.0" style="-fx-background-color: #1e4c6b;" styleClass="right-border" HBox.hgrow="SOMETIMES">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleAdd" text="&lt;-" />
                  <Button mnemonicParsing="false" onAction="#handleRemove" text="-&gt;" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </VBox>
            <VBox styleClass="right-border" HBox.hgrow="SOMETIMES">
               <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #F7F8F9; -fx-background-color: #1e4c6b;" styleClass="fs3-headline" text="Assigned cases" VBox.vgrow="NEVER" />
                  <ListView fx:id="ltvAssignedCases" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
