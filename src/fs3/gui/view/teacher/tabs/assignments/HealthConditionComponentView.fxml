<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TitledPane fx:id="ttpRoot" alignment="TOP_LEFT" prefWidth="750.0" stylesheets="@../../../styles/common.css"
            text="Health condition" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fs3.gui.controller.teacher.tabs.assignments.AHealthConditionComponentController">
    <content>
        <VBox spacing="10.0">
            <children>
                <HBox spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <VBox maxWidth="300.0" minWidth="-Infinity" prefWidth="200.0" HBox.hgrow="SOMETIMES">
                            <children>
                                <Label styleClass="fs3-text" text="Health condition state:"/>
                                <ComboBox fx:id="cmbHealthConditionState" maxWidth="300.0" minWidth="-Infinity"
                                          prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <VBox maxWidth="300.0" prefWidth="200.0" HBox.hgrow="SOMETIMES">
                            <children>
                                <Label styleClass="fs3-text" text="Follow up date:"/>
                                <DatePicker fx:id="dtpFollowUpDate" editable="false" maxWidth="300.0"
                                            minWidth="-Infinity" prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <VBox maxWidth="300.0" minWidth="-Infinity" prefWidth="200.0" HBox.hgrow="SOMETIMES">
                            <children>
                                <Label styleClass="fs3-text" text="Expected level:"/>
                                <ComboBox fx:id="cmbExpectedLevel" maxWidth="300.0" minWidth="-Infinity"
                                          prefWidth="200.0"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label styleClass="fs3-text" text="Professional note:"/>
                <TextArea fx:id="txaProfessionalNote" editable="false" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                          prefHeight="150.0" promptText="Professional note" VBox.vgrow="SOMETIMES"/>
                <Label styleClass="fs3-text" text="Current assessment:"/>
                <TextArea fx:id="txaCurrentAssessment" editable="false" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                          prefHeight="150.0" VBox.vgrow="SOMETIMES"/>
                <Label styleClass="fs3-text" text="Observation note:"/>
                <TextArea fx:id="txaObservationNote" editable="false" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                          prefHeight="150.0" promptText="Observation note" VBox.vgrow="SOMETIMES"/>
            </children>
        </VBox>
    </content>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
    </padding>
</TitledPane>
