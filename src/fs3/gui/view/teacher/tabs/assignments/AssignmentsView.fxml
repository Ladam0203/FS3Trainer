<HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="1300.0" stylesheets="@../../../styles/common.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fs3.gui.controller.teacher.tabs.assignments.AssignmentsController">
    <children>
        <VBox minWidth="-Infinity" prefWidth="300.0" styleClass="right-border">
            <children>
                <Pane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="55.0" style="-fx-background-color: #22577A;" VBox.vgrow="NEVER">
                    <children>
                        <ImageView fitWidth="80.0" layoutX="8.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../resources/login_logo.png" />
                            </image>
                        </ImageView>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Pane>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #F7F8F9; -fx-background-color: #1e4c6b;" styleClass="fs3-headline" text="Assignments">
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </Label>
                <ListView fx:id="ltvAssignments" onMouseClicked="#handleSelectCitizen" VBox.vgrow="ALWAYS" />
            <HBox style="-fx-background-color: #1e4c6b;" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <TextField fx:id="txfFilterAssignments" onKeyTyped="#handleFilterAssignments" promptText="Filter" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            </children>
        </VBox>
        <TabPane tabClosingPolicy="UNAVAILABLE" tabMinHeight="40.0" tabMinWidth="180.0" HBox.hgrow="ALWAYS">
            <tabs>
                <Tab text="General information">
                    <fx:include source="GeneralInformationView.fxml" />
                </Tab>
                <Tab text="Health conditions">
                    <fx:include source="HealthConditionsView.fxml" />

                </Tab>
                <Tab text="Functional abilities">
                    <fx:include source="FunctionalAbilitiesView.fxml" />

                </Tab>
            <Tab text="Medicine list">
              <content>
                  <fx:include source="MedicineListView.fxml" />
              </content>
            </Tab>
            </tabs>
        </TabPane>
    </children>
