<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="ttpRoot" alignment="TOP_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefWidth="750.0" stylesheets="@../../../styles/common.css" text="Functional ability" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fs3.gui.controller.teacher.tabs.templates.TFunctionalAbilityComponentController">
    <content>
        <VBox spacing="10.0">
            <children>
            <HBox spacing="10.0">
               <children>
                  <BorderPane HBox.hgrow="NEVER">
                     <center>
                        <ComboBox fx:id="cmbCurrentLimitationLevel" minWidth="-Infinity" prefWidth="300.0" />
                     </center>
                     <top>
                        <Label styleClass="fs3-text" text="Current limitation level:" BorderPane.alignment="CENTER_LEFT" />
                     </top>
                  </BorderPane>
                  <ImageView fx:id="imgCurrent" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <BorderPane HBox.hgrow="NEVER">
                     <center>
                        <ComboBox fx:id="cmbExpectedLimitationLevel" minWidth="-Infinity" prefWidth="300.0" />
                     </center>
                     <top>
                        <Label styleClass="fs3-text" text="Expected limitation level:" BorderPane.alignment="CENTER_LEFT" />
                     </top>
                  </BorderPane>
                  <ImageView fx:id="imgExpected" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" />
               </children>
            </HBox>
                <VBox spacing="10.0">
                    <children>
                  <Label styleClass="fs3-text" text="Professional note:" />
                        <TextArea fx:id="txaProfessionalNote" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" VBox.vgrow="SOMETIMES" />
                  <Label styleClass="fs3-text" text="Observation notes:" />
                        <TextArea fx:id="txaObservationNote" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="200.0" VBox.vgrow="SOMETIMES" />
                    </children>
                </VBox>
                <VBox spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                        <VBox maxWidth="300.0" minWidth="-Infinity" prefWidth="200.0" HBox.hgrow="SOMETIMES">
                           <children>
                              <Label styleClass="fs3-text" text="Performance level:" />
                                      <ComboBox fx:id="cmbPerformanceLevel" maxWidth="300.0" minWidth="-Infinity" />
                           </children>
                        </VBox>
                        <VBox maxWidth="300.0" minWidth="-Infinity" prefWidth="200.0" HBox.hgrow="SOMETIMES">
                           <children>
                              <Label maxWidth="300.0" minWidth="-Infinity" prefWidth="200.0" styleClass="fs3-text" text="Perceived limitation level:" VBox.vgrow="SOMETIMES" />
                                      <ComboBox fx:id="cmbPerceivedLimitationLevel" maxWidth="300.0" minWidth="-Infinity" />
                           </children>
                        </VBox>
                            </children>
                        </HBox>
                  <Label styleClass="fs3-text" text="Citizen request:" />
                        <TextArea fx:id="txaCitizenRequest" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" promptText="Citizen request" VBox.vgrow="SOMETIMES" />
                    </children>
                </VBox>
                  <HBox spacing="10.0" VBox.vgrow="NEVER">
                      <children>
                  <VBox maxWidth="300.0" prefWidth="200.0">
                     <children>
                        <Label styleClass="fs3-text" text="Follow up date:" />
                                <DatePicker fx:id="dtpFollowUpDate" maxWidth="300.0" minWidth="-Infinity" />
                     </children>
                  </VBox>
                      </children>
                  </HBox>
                <ButtonBar prefWidth="200.0" VBox.vgrow="NEVER">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#handleSave" text="Save" />
                    </buttons>
                </ButtonBar>
            </children>
        </VBox>
    </content>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</TitledPane>
