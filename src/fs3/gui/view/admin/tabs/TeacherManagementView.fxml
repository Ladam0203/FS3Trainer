<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #1e4c6b;" stylesheets="@../../styles/common.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fs3.gui.controller.admin.tabs.TeacherManagementController">
   <children>
      <VBox minWidth="-Infinity" prefWidth="300.0" styleClass="right-border" HBox.hgrow="NEVER">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #F7F8F9; -fx-background-color: #1e4c6b;" styleClass="fs3-headline" text="Teacher list" VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </Label>
            <ListView fx:id="ltvTeachers" onMouseClicked="#handleSelectTeacher" VBox.vgrow="ALWAYS" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0" VBox.vgrow="NEVER">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#handleNewTeacher" text="New..." />
                  <Button mnemonicParsing="false" onAction="#handleEditTeacher" text="Edit" />
                  <Button layoutX="267.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleDeleteTeacher" text="Delete" />
               </buttons>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</HBox>
