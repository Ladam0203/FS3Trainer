                  </ButtonBar>
               </children>
            </VBox>
            <VBox minWidth="-Infinity" prefWidth="350.0" styleClass="right-border" HBox.hgrow="NEVER">
               <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #F7F8F9; -fx-background-color: #1e4c6b;" styleClass="fs3-headline" text="Teacher list">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Label>
                  <ListView fx:id="ltvTeachers" onMouseClicked="#handleSelectTeacher" VBox.vgrow="ALWAYS" />
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                     <buttons>
                        <Button mnemonicParsing="false" text="New" />
                        <Button mnemonicParsing="false" text="Edit" />
                        <Button layoutX="267.0" layoutY="10.0" mnemonicParsing="false" text="Delete" />
                     </buttons>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
