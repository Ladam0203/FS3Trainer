<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" stylesheets="@../styles/common.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fs3.gui.controller.admin.AdminPageController">
   <children>
      <Pane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="56.0" style="-fx-background-color: #22577A;">
         <children>
            <ImageView fitWidth="80.0" layoutX="8.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/login_logo.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <HBox style="-fx-background-color: #1e4c6b;" VBox.vgrow="ALWAYS">
         <children>
            <VBox minWidth="-Infinity" prefWidth="350.0" styleClass="right-border">
